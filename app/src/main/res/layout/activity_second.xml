<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_layout"
    android:orientation="vertical"
    tools:context=".MainActivity"

    >


        <TextView
            android:id="@+id/second_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_layout"
            android:text="@string/second_weather"
            android:textSize="@dimen/main_text_size"
           />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/red_line"
        android:layout_marginBottom="@dimen/margin_layout"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/thermometer"

            />
        <ImageView
            android:id="@+id/hum_picture"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="@dimen/margin_layout"
            android:src="@drawable/hum"
            />

        <ImageView
            android:id="@+id/wind_picture"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="@dimen/margin_layout"
            android:src="@drawable/wind"
            />

    </LinearLayout>


    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginBottom="@dimen/margin_layout"
        android:src="@drawable/sun"
        />

    <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginBottom="@dimen/margin_layout"
        android:src="@drawable/moon"
        />



    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/back" />


    <TextView
        android:id="@+id/text_view_counter_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_layout"
        android:textSize="@dimen/main_text_size"
        />




</LinearLayout>