<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeatherFragment">

    <TextView
        android:id="@+id/weather_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/second_weather"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/image_start"
        android:layout_marginTop="@dimen/image_start"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/image_start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thermometer"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="@dimen/text_margin"
                android:src="@drawable/thermometer" />

            <ImageView
                android:id="@+id/hum_picture"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_toEndOf="@id/thermometer"
                android:src="@drawable/drop" />

            <ImageView
                android:id="@+id/wind_picture"
                android:layout_marginStart="32dp"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_toEndOf="@id/hum_picture"

                android:src="@drawable/wind" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"

                android:src="@drawable/sun" />

            <TextView
                android:id="@+id/tv_day_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:textSize="20sp"
                tools:text="12"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/tv_hum"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="20sp"
                tools:text="12"

                />

            <TextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                tools:text="12"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/moon" />

            <TextView
                android:id="@+id/tv_night_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:textSize="20sp"
                tools:text="12"

                />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/back" />


</LinearLayout>
